{
    "name": "flexphp/repositories",
    "description": "Agnostic repositories PHP, any framework",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Freddie Gar",
            "email": "freddie.gar@outlook.com"
        }
    ],
    "require": {
        "php": ">=7.1.3"
    },
    "require-dev": {
        "phpstan/phpstan": "~0.9",
        "phpunit/phpunit": "^7.0",
        "squizlabs/php_codesniffer": "~3.2"
    },
    "autoload": {
        "psr-4": {
            "FlexPHP\\Repositories\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "FlexPHP\\Repositories\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "phpcs": "phpcs --standard=PSR2 src/",
        "phpfix": "phpcbf --standard=PSR2 --extensions=php src/",
        "phpstan": "phpstan analyse -l 7 src/",
        "phpunit": "phpunit --bootstrap vendor/autoload.php --testdox tests/",
        "test": [
            "@phpcs",
            "@phpstan",
            "@phpunit"
        ]
    },
    "prefer-stable": true
}
