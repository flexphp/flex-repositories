{
    "name": "flexphp/repositories",
    "description": "Agnostic repositories PHP, any framework",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Freddie Gar",
            "email": "freddie.gar@outlook.com"
        }
    ],
    "require": {
        "php": ">=7.1.3"
    },
    "require-dev": {
        "phpmd/phpmd": "^2.8",
        "phpstan/phpstan": "~0.9",
        "phpunit/phpunit": "^7.0",
        "squizlabs/php_codesniffer": "~3.2"
    },
    "autoload": {
        "psr-4": {
            "FlexPHP\\Repositories\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "FlexPHP\\Repositories\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "phpcs": "phpcs --standard=PSR2 src/ tests/ --ignore=tests/coverage/*",
        "phpmd": "phpmd src/,tests/ ansi design,naming,unusedcode",
        "phpfix": "phpcbf --standard=PSR2 --extensions=php src/ tests/",
        "phpstan": "phpstan analyse -l 8 src/ tests/",
        "phpunit": "phpunit --bootstrap vendor/autoload.php --testdox tests/",
        "test": [
            "@phpcs",
            "@phpmd",
            "@phpstan",
            "@phpunit"
        ]
    },
    "config": {
        "sort-packages": true,
        "classmap-authoritative": true,
        "platform": {
            "php": "7.1.3"
        }
    },
    "prefer-stable": true
}